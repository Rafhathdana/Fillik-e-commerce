<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script>
  $(document).ready(function () {
    $.validator.addMethod(
      "number",
      function (value, element) {
        return this.optional(element) || /^(?!0)[0-9]+$/.test(value);
      },
      "numbers only allowed"
    );

    $("#signin-form").validate({
      rules: {
        mobile: {
          required: true,
          maxlength: 10,
          minlength: 10,
          number: true,
        },
        termsCheckbox: {
          required: true,
        },
      },
      messages: {
        mobile: {
          required: "Please enter Mobile Number",
          minlength: "10 digit indian number should be there",
          maxlength: "maximum 10 digit allowed in indian number",
          number: "only numbers allowed",
        },

        termsCheckbox: {
          required: "Please agree to the Terms & Conditions",
        },
      },
      highlight: function (element) {
        $(element).closest(".form-floating").addClass("is-invalid");
      },
      unhighlight: function (element) {
        $(element).closest(".form-floating").removeClass("is-invalid");
      },
      errorElement: "div",
      errorClass: "invalid-feedback",
      errorPlacement: function (error, element) {
        if (element.parent(".input-group").length) {
          error.insertAfter(element.parent());
        } else {
          error.insertAfter(element);
        }
      },
    });
    $.validator.addMethod(
      "required",
      $.validator.methods.required,
      "Please agree to the Terms & Conditions"
    );
  });
</script>
<script>
  const inputs = document.querySelectorAll(".pin-box");

  inputs.forEach((input, index) => {
    input.addEventListener("keydown", (event) => {
      if (event.key >= 0 && event.key <= 9) {
        inputs[index].value = event.key;
        inputs[index].style.background = "#ffffff";
        if (index < inputs.length - 1) {
          inputs[index + 1].style.background = "#ffffff";
          inputs[index + 1].focus();
        }
        event.preventDefault();
      } else if (event.key === "Backspace" && index > 0) {
        inputs[index - 1].focus();
        inputs[index].value = "";
        inputs[index - 1].value = "";
        event.preventDefault();
      }
    });
  });
</script>
<script>
  const signupForm = document.getElementById("signin-form");
  const otpSection = document.getElementById("otp-section");
  const present = document.getElementById("present");
  signupForm.addEventListener("submit", (event) => {
    event.preventDefault();
    const validator = $("#signin-form").validate();
    if (validator.form()) {
      const mobileInput = document.getElementById("mobile").value;

      if (mobileInput) {
        validateMobile(mobileInput)
      } else {
        const alertDiv = $("#raf");
        alertDiv.text("Mobile not exist");
        alertDiv.removeClass("d-none");
        alertDiv.addClass("alert-success");

        setTimeout(function () {
          alertDiv.addClass("d-none");
        }, 4000);
        normalSection();
      }
    }
  });
  function validateMobile(mobile) {
    fetch("/mobileexists", {
      method: "POST",
      body: JSON.stringify({
        mobile: mobile,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        return response.json(); // get the response body
      })
      .then((data) => {
        console.log(data);

        if (data.success) {
          sendOTP(mobileInput);
        } else {
          return false;
        }
      })
      .catch((error) => {
        console.error(error);
        alert("An error occurred while verifying OTP. Please try again later.");
      });
  }
  function sendOTP(mobile) {
    fetch("/sendotp", {
      method: "POST",
      body: JSON.stringify({
        mobile: mobile,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        return response.json(); // get the response body
      })
      .then((data) => {
        console.log(data);

        if (data.success) {
          console.log(data);
          showOTPSection();
        } else {
          console.log(data);
          normalSection();
          swal("OTP Not sent. Please try again.");
        }
      })
      .catch((error) => {
        console.error(error);
        alert("An error occurred while verifying OTP. Please try again later.");
      });
  }

  function showOTPSection() {
    signupForm.classList.add("d-none");
    otpSection.classList.remove("d-none");
    present.classList.remove("d-none");
  }

  function normalSection() {
    otpSection.classList.add("d-none");
    signupForm.classList.remove("d-none");
    present.classList.add("d-none");
  }

  const verifyOTPButton = document.querySelector(".btn-verify-otp");
  verifyOTPButton.addEventListener("click", async () => {
    let otp = "";
    for (let i = 1; i <= 6; i++) {
      otp += document.getElementById(`box${i}`).value;
    }
    console.log(otp);
    if (verifyOTP(otp)) {
      console.log("hai");
    } else {
      swal("Invalid OTP!");
    }
  });

  async function verifyOTP(otp) {
    const processing = "Please Wait";
    const mobileInput = document.getElementById("mobile").value;
    $("#verifyOtp").text(processing).css("cursor", "none");
    console.log(otp);
    try {
      const response = await fetch("/verifyotpLogin", {
        method: "POST",
        body: JSON.stringify({
          userOtp: otp,
          mobile: mobileInput,
        }),
        headers: {
          "Content-Type": "application/json",
        },
      });

      if (response.ok) {
        window.location.href = "/login";
      } else {
        swal("An error occurred. Please try again later.");
      }
    } catch (error) {
      console.error(error);
      swal("An error occurred. Please try again later.");
    }
  }
</script>

