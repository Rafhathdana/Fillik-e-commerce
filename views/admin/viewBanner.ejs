<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  <link
    rel="stylesheet"
    type="text/css"
    href="http://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css"
  />
  <script src="http://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
</head>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Banners</h4>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>small Head</th>
              <th>Big Head</th>
              <th>Link</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < banner.length; i++) { %>
            <tr>
              <td><%= banner[i].smallHead %></td>
              <td><%= banner[i].bigHead %></td>
              <td><%= banner[i].link %></td>
              <td>
                <img src="/images/bannerImages/<%= banner[i].image %>" />
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <button
                    type="button"
                    class="btn btn-success btn-sm btn-icon-text mr-3"
                    onclick="window.location='/admin/editBanner/<%=banner[i]._id %>'"
                  >
                    Edit
                    <i class="typcn typcn-edit btn-icon-append"></i>
                  </button>
                  <button
                    type="button"
                    class="btn btn-danger btn-sm btn-icon-text"
                    onclick="confirmDelete('<%= banner[i]._id %>')"
                  >
                    Block
                    <i class="typcn typcn-delete-outline btn-icon-append"></i>
                  </button>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />
  <br />
</div>
<script>
  function confirmDelete(Id) {
    if (confirm("Are you sure you want to delete this user?")) {
      // User confirmed, redirect to the delete user URL with the user's _id
      fetch(`/admin/deleteCategory/${Id}`, { method: "DELETE" })
        .then((res) => {
          if (res.ok) {
            window.location.reload();
          } else {
            swal("unable to delete Category");
          }
        })
        .catch((err) => {
          console.error(err);
          swal("Internal server error");
        });
    } else {
      // User cancelled, do nothing
      console.log("cancelled deletion ");
    }
  }
</script>
<script>
  $(document).ready(function () {
    $("#categoryTable").DataTable();
  });
</script>
