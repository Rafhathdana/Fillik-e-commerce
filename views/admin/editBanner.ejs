<section style="background-color: #eee; width: 100%">
  <div class="container py-5" style="width: 100%">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/admin/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">
              Banner Edit
            </li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <form id="myForm">
              <% if(banner.image){ %>
              <img
                src="/images/bannerImages/<%=banner.image%>"
                alt="avatar"
                class="rounded-circle img-fluid"
                style="width: 150px"
                onclick="insertImage('<%= banner._id %>')"
              />

              <% }else{ %>
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                alt="avatar"
                class="rounded-circle img-fluid"
                style="width: 150px"
                onclick="insertImage('<%= banner._id %>')"
              />
              <% } %>
            </form>
            <h5 class="my-3">Click & Change</h5>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <form action="/admin/editBanner" method="post">
              <div class="row">
                <div class="mb-3 col-md-12">
                  <label class="form-label" for="inputFirstName"
                    >smallHead</label
                  >
                  <input
                    type="text"
                    name="smallHead"
                    class="form-control"
                    value="<%= banner.smallHead %>"
                  />
                </div>
              </div>
              <div class="row">
                <div class="mb-3 col-md-12">
                  <label class="form-label" for="inputFirstName">bigHead</label>
                  <input
                    type="text"
                    name="bigHead"
                    class="form-control"
                    value="<%= banner.bigHead %>"
                  />
                </div>
              </div>
              <div class="row">
                <div class="mb-3 col-md-12">
                  <label class="form-label" for="inputLastName">link</label>
                  <input
                    type="text"
                    name="link"
                    class="form-control"
                    value="<%= banner.link %>"
                  />
                </div>
              </div>

              <button type="submit" class="btn btn-primary">
                Save changes
              </button>
            </form>

            <hr />
          </div>
        </div>
        <div class="justify-content-end d-flex">
          <button
            type="button"
            id="toggle-button-editProfile"
            class="btn btn-primary justify-content-end mr-0"
          >
            Edit
          </button>
        </div>
      </div>
    </div>
  </div>
  <style>
