      margin-bottom: 1rem;
    }

    .bio-table td,
    .bio-table th {
      padding: 0.75rem;
      border-bottom: 1px solid #dee2e6;
      text-align: left;
      vertical-align: middle;
    }

    .bio-table th {
      font-weight: 600;
      background-color: #f5f5f5;
    }

    .bio-table tr:last-child td {
      border-bottom: none;
    }

    .bio-table td:last-child {
      text-align: right;
    }

    .card-title {
      font-weight: bold;
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .table thead th {
      border-top: none;
