      messages: {
        email: {
          required: "Please enter your email address",
          email: "Please enter a valid email address",
        },
        fullName: {
          required: "Please enter your full name",
          minlength: "Your name must be at least 3 characters long",
          noSpecialChars: "Special characters and spaces are not allowed",
        },
        mobile: {
          required: "Please enter Mobile Number",
          minlength: "10 digit indian number should be there",
          maxlength: "maximum 10 digit allowed in indian number",
          number: "only numbers allowed",
        },

        password: {
          required: "Please enter a password",
          minlength: "Your password must be at least 8 characters long",
        },
        confirmPassword: {
          required: "Please confirm your password",
          equalTo: "Your passwords do not match",
        },
        termsCheckbox: {
          required: "Please agree to the Terms & Conditions",
        },
      },
      highlight: function (element) {
        $(element).closest(".form-floating").addClass("is-invalid");
      },
      unhighlight: function (element) {
        $(element).closest(".form-floating").removeClass("is-invalid");
      },
      errorElement: "div",
      errorClass: "invalid-feedback",
      errorPlacement: function (error, element) {
        if (element.parent(".input-group").length) {
          error.insertAfter(element.parent());
        } else {
          error.insertAfter(element);
        }
      },
    });

    $.validator.addMethod(
      "required",
      $.validator.methods.required,
      "Please agree to the Terms & Conditions"
    );
  });
</script>
<script>
  const inputs = document.querySelectorAll(".pin-box");

  inputs.forEach((input, index) => {
    input.addEventListener("keydown", (event) => {
      if (event.key >= 0 && event.key <= 9) {
        inputs[index].value = event.key;
        inputs[index].style.background = "#ffffff";
        if (index < inputs.length - 1) {
          inputs[index + 1].style.background = "#ffffff";
          inputs[index + 1].focus();
        }
        event.preventDefault();
      } else if (event.key === "Backspace" && index > 0) {
        inputs[index - 1].focus();
        inputs[index].value = "";
        inputs[index - 1].value = "";
        event.preventDefault();
      }
    });
  });
</script>

<script>
  const signupForm = document.getElementById("signup-form");
  const otpSection = document.getElementById("otp-section");

  const backbutton = document.getElementById("backbutton");
  const resendOtp = document.getElementById("resendOtp");
  signupForm.addEventListener("submit", (event) => {
    event.preventDefault();
    const validator = $("#signup-form").validate();
    if (validator.form()) {
      const mobileInput = document.getElementById("mobile").value;
      const emailInput = document.getElementById("email").value;

      if (mobileInput && emailInput) {
        var processing = "Please Wait";
        $("#Submitting")
          .prop("disabled", true)
          .text(processing)
          .css("cursor", "none");
        checkEmailExists(mobileInput, emailInput);
      } else {
        normalSection();
      }
    }
  });

  async function checkEmailExists(mobile, email) {
    fetch("/admin/emailmobileexists", {
      method: "POST",
      body: JSON.stringify({
        mobile: mobile,
        email: email,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        return response.json(); // get the response body
      })
      .then((data) => {
        if (data.success) {
          sendOTP(mobile);
        } else {
          swal("Email or Mobile already registered");
          normalSection();
        }
      })
      .catch((error) => {
        console.error(error);
        swal("Error verifying email");
      });
  }

  function sendOTP(mobile) {
    fetch("/admin/sendotp", {
      method: "POST",
      body: JSON.stringify({
        mobile: mobile,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        return response.json(); // get the response body
      })
      .then((data) => {
        if (data.success) {
          startTimer();
          showOTPSection();
        } else {
          normalSection();
          swal("OTP Not sended. Please try again.");
        }
      })
      .catch((error) => {
        console.error(error);
        alert(
          "An error occurred while sending verifying OTP. Please try again later."
        );
      });
  }

  function showOTPSection() {
    signupForm.classList.add("d-none");
    otpSection.classList.remove("d-none");
    backbutton.classList.remove("d-none");
    resendOtp.classList.remove("d-none");
  }
  function normalSection() {
    var processing = "Sign In";
    $("#Submitting")
      .prop("disabled", false)
      .text(processing)
      .css("cursor", "pointer");
    otpSection.classList.add("d-none");
    signupForm.classList.remove("d-none");

    backbutton.classList.add("d-none");
    resendOtp.classList.add("d-none");
  }
  const verifyOTPButton = document.querySelector(".btn-verify-otp");
  verifyOTPButton.addEventListener("click", () => {
    let otp = document.getElementById("box1").value;
    otp += document.getElementById("box2").value;
    otp += document.getElementById("box3").value;
    otp += document.getElementById("box4").value;
    otp += document.getElementById("box5").value;
    otp += document.getElementById("box6").value;
    if (verifyOTP(otp)) {
    } else {
      swal("Invalid OTP!");
    }
  });
  async function verifyOTP(otp) {
    var processing = "Please Wait";
    $("#verifyOtp")
      .prop("disabled", true)
      .text(processing)
      .css("cursor", "none");
    try {
      const response = await fetch("/admin/verifyotp", {
        method: "POST",
        body: JSON.stringify({
          userOtp: otp,
        }),
        headers: {
          "Content-Type": "application/json",
        },
      });

      const data = await response.json();

      if (data.success) {
        // OTP verification successful, move to the signinUser()
        signinUser();
        // document.querySelector('form').submit();
      } else {
        // OTP verification failed, display an error message
        swal("Invalid OTP!");
        var processing = "Verify OTP";
        $("#verifyOtp")
          .prop("disabled", false)
          .text(processing)
          .css("cursor", "pointer");

        showOTPSection();
      }
    } catch (error) {
      console.error(error);
      swal("An error occurred while verifying OTP. Please try again later.");
    }
  }

  function signinUser() {
    const email = document.getElementById("email").value;
    const fullName = document.getElementById("fullName").value;
    const mobile = document.getElementById("mobile").value;
    const password = document.getElementById("password").value;

    fetch("/admin/0124", {
      method: "POST",
      body: JSON.stringify({
        email: email,
        fullName: fullName,
        mobile: mobile,
        password: password,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        if (response.ok) {
          window.location.href = "/admin/login";
        } else {
          swal("An error occurred. Please try again later.");
        }
      })
      .catch((error) => {
        console.error(error);
        swal("An error occurred. Please try again later.");
      });
  }
</script>
