<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
  $(document).ready(function () {
    $("#toggle-button-editProfile").click(function () {
      $("#card-personalInfo").toggle();
    });
  });

  $("#changePassword").submit((e) => {
    e.preventDefault();
    $.ajax({
      url: "/update-user-password",
      data: $("#changePassword").serialize(),
      method: "post",
      success: (response) => {
        if (response.message) {
          swal("Error", "password is invalid", "error");
        } else {
          swal("Password Changed Successfully");
          location.href = "/";
        }
      },
    });
  });

  // Disable right-click context menu
  document.addEventListener("contextmenu", function (event) {
    event.preventDefault();
  });
</script>

<script>
  function deleteAddress(id) {
    swal({
      text: "Are you sure?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then((confirmed) => {
      if (confirmed) {
        fetch("/deleteAddress", {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            id: id,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              swal("Done").then(() => {
                setTimeout(() => {
                  window.location.reload();
                }, 2000);
              });
            } else {
              swal("Error");
            }
          })
          .catch((error) => {
            swal("Error deleting address: " + error);
          });
      }
    });
  }
</script>

