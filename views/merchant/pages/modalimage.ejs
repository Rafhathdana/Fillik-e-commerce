<script>
  let sizeBoxes = document.querySelectorAll(".sizeBox");

  sizeBoxes.forEach((sizeBox) => {
    sizeBox.addEventListener("click", () => {
      sizeBoxes.forEach((box) => {
        box.classList.remove("active");
        box.style.background = "#ffffff";
        box.style.color = "#005159";
      });
      sizeBox.classList.add("active");
      sizeBox.style.background = "#005159";
      sizeBox.style.color = "#FFFFFF";
    });
  });
</script>
<script>
  $(document).ready(function () {
    $(".add-to-cart").click(function (event) {
      event.preventDefault();
      let selectedSizeBox = $(this)
        .closest(".product-image")
        .find(".sizeBox.active");

      if (selectedSizeBox.length === 0) {
        let message = $("<p>").text("Please select a size").css({
          color: "#ff0000",
          fontWeight: "bold",
          textAlign: "center",
          marginTop: "10px",
        });
        let productGrid = $(this).closest(".product-grid");
        productGrid.append(message);
        setTimeout(() => {
          message.remove();
        }, 2000);
      } else {
        // Get the product ID
        var productId = $(this)
          .closest(".product-grid")
          .find("a.image")
          .attr("href")
          .split("/")
          .pop();
        console.log(productId);
        // Get the selected size
        var size = $(this)
          .closest(".product-image")
          .find(".cartSize.active")
          .text();
        console.log(size);
        // Get the quantity
        var quantity = 1;

        // Send the data to the server
        fetch("/addToCart", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            productId: productId,
            size: size,
            quantity: quantity,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              viewCart();
            } else {
              console.log("error");
            }
          })
          .catch((error) => {
            swal("Error adding product to cart: " + error);
          });
      }
    });
  });
</script>
