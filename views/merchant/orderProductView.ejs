<style>
  .gradient-custom {
    /* fallback for old browsers */
    background: #cd9cf2;

    /* Chrome 10-25, Safari 5.1-6 */
    background: -webkit-linear-gradient(
      to top left,
      rgba(205, 156, 242, 1),
      rgba(246, 243, 255, 1)
    );

    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    background: linear-gradient(
      to top left,
      rgba(205, 156, 242, 1),
      rgba(246, 243, 255, 1)
    );
  }
</style>
<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">
              <span style="color: #a8729a"> <%= orderList.address.name %></span>
            </h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a">Receipt</p>
              <p class="small text-muted mb-0">
                Receipt Voucher : <%=orderList.id%>
              </p>
            </div>
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img
                      src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp"
                      class="img-fluid"
                      alt="Phone"
                    />
                  </div>
                  <div
                    class="col-md-2 text-center d-flex justify-content-center align-items-center"
                  >
                    <p class="text-muted mb-0"><%=orderList.name%></p>
                  </div>
                  <div
                    class="col-md-2 text-center d-flex justify-content-center align-items-center"
                  >
                    <p class="text-muted mb-0 small"></p>
                  </div>
                  <div
                    class="col-md-2 text-center d-flex justify-content-center align-items-center"
                  >
                    <p class="text-muted mb-0 small">
                      Size<%=orderList.items[0].size%>
                    </p>
                  </div>
                  <div
                    class="col-md-2 text-center d-flex justify-content-center align-items-center"
                  >
                    <p class="text-muted mb-0 small">
                      Qty:<%=orderList.items[0].quantity%>
                    </p>
                  </div>
                  <div
                    class="col-md-2 text-center d-flex justify-content-center align-items-center"
                  >
                    <p class="text-muted mb-0 small"><%=orderList.amount%></p>
                  </div>
                </div>
                <hr
                  class="mb-4"
                  style="background-color: #e0e0e0; opacity: 1"
                />
              </div>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Order Details</p>
              <p class="text-muted mb-0">
                <% let sum=orderList.items[0].quantity*orderList.amount%>
                <span class="fw-bold me-4">Total</span> <%=sum%>
              </p>
            </div>
            <div class="pt-5">
              <p class="text-muted mb-0">
                <span class="fw-bold me-4">Order Date</span> <%=
                orderList.status[0].dateTimeOn %>
              </p>
              <p class="text-muted mb-0">
                <span class="fw-bold me-4">Current Status</span> <%=
                orderList.status[orderList.status.length-1].currentStatus %>
              </p>
              <p class="text-muted mb-0">
                <span class="fw-bold me-4">Last Updated Status on</span> <%=
                orderList.status[orderList.status.length-1].dateTimeOn %>
              </p>
            </div>

            <div class="pt-2">
              <p class="fw-bold mb-0">Address</p>
              <br />
              <p class="text-muted mb-0"><%= orderList.address.name %></p>
              <p class="text-muted mb-0">
                <%= orderList.address.houseName %> (h)
              </p>
              <p class="text-muted mb-0"><%= orderList.address.place %>(p)</p>
              <p class="text-muted mb-0">
                <%= orderList.address.landMark %>(L)
              </p>
              <p class="text-muted mb-0"><%= orderList.address.city %>(c)</p>
              <p class="text-muted mb-0">
                Pin:<%= orderList.address.pinCode %>
              </p>
              <p class="text-muted mb-0">
                Mobile:<%= orderList.address.mobile %>
              </p>
              <p class="text-muted mb-0">
                <span class="fw-bold me-4">Delivery Charges</span> Free
              </p>
            </div>
          </div>
          <div
            class="card-footer border-0 px-4 py-5"
            style="
              background-color: #a8729a;
              border-bottom-left-radius: 10px;
              border-bottom-right-radius: 10px;
            "
          >
            change Status:
            <h5
              class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0"
            >
              Total paid: <span class="h2 mb-0 ms-2">$1040</span>
            </h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
