<script>
  const inputs = document.querySelectorAll(".pin-box");

  inputs.forEach((input, index) => {
    input.addEventListener("keydown", (event) => {
      if (event.key >= 0 && event.key <= 9) {
        inputs[index].value = event.key;
        inputs[index].style.background = "#ffffff";
        if (index < inputs.length - 1) {
          inputs[index + 1].style.background = "#ffffff";
          inputs[index + 1].focus();
        }
        event.preventDefault();
      } else if (event.key === "Backspace" && index > 0) {
        inputs[index - 1].focus();
        inputs[index].value = "";
        inputs[index - 1].value = "";
        event.preventDefault();
      }
    });
  });
</script>

<script>
  const signupForm = document.getElementById("signup-form");
  const otpSection = document.getElementById("otp-section");
  const present = document.getElementById("present");
  signupForm.addEventListener("submit", (event) => {
    event.preventDefault();
    const validator = $("#signup-form").validate();
    if (validator.form()) {
      const mobileInput = document.getElementById("mobile").value;
      const emailInput = document.getElementById("email").value;

      if (mobileInput && emailInput) {
        var processing = "Please Wait";
        $("#Submitting")
          .prop("disabled", true)
          .text(processing)
          .css("cursor", "none");
        checkEmailExists(mobileInput, emailInput);
      } else {
        normalSection();
      }
    }
  });

  async function checkEmailExists(mobile, email) {
    fetch("/merchant/emailmobileexists", {
      method: "POST",
      body: JSON.stringify({
        mobile: mobile,
        email: email,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        return response.json(); // get the response body
      })
      .then((data) => {
        if (data.success) {
          sendOTP(mobile);
        } else {
          swal("Email or Mobile already registered");
          normalSection();
        }
      })
      .catch((error) => {
        console.error(error);
        swal("Error verifying email");
      });
  }

  function sendOTP(mobile) {
    fetch("/merchant/sendotp", {
      method: "POST",
      body: JSON.stringify({
        mobile: mobile,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        return response.json(); // get the response body
      })
      .then((data) => {
        if (data.success) {
          showOTPSection();
        } else {
          normalSection();
          swal("OTP Not sended. Please try again.");
        }
      })
      .catch((error) => {
        console.error(error);
        alert(
          "An error occurred while sending verifying OTP. Please try again later."
        );
      });
  }

  function showOTPSection() {
    signupForm.classList.add("d-none");
    otpSection.classList.remove("d-none");
    present.classList.remove("d-none");
  }
  function normalSection() {
    var processing = "Sign In";
    $("#Submitting")
      .prop("disabled", false)
      .text(processing)
      .css("cursor", "pointer");
    otpSection.classList.add("d-none");
    signupForm.classList.remove("d-none");
    present.classList.add("d-none");
  }
  const verifyOTPButton = document.querySelector(".btn-verify-otp");
  verifyOTPButton.addEventListener("click", () => {
    let otp = document.getElementById("box1").value;
    otp += document.getElementById("box2").value;
    otp += document.getElementById("box3").value;
    otp += document.getElementById("box4").value;
    otp += document.getElementById("box5").value;
    otp += document.getElementById("box6").value;
    if (verifyOTP(otp)) {
    } else {
      swal("Invalid OTP!");
    }
  });
  async function verifyOTP(otp) {
    var processing = "Please Wait";
    $("#verifyOtp")
      .prop("disabled", true)
      .text(processing)
      .css("cursor", "none");
    try {
      const response = await fetch("/merchant/verifyotp", {
        method: "POST",
        body: JSON.stringify({
          userOtp: otp,
        }),
        headers: {
          "Content-Type": "application/json",
        },
      });

      const data = await response.json();

      if (data.success) {
        // OTP verification successful, move to the signinUser()
        signinUser();
        // document.querySelector('form').submit();
      } else {
        // OTP verification failed, display an error message
        swal("Invalid OTP!");
        var processing = "Verify OTP";
        $("#verifyOtp")
          .prop("disabled", false)
          .text(processing)
          .css("cursor", "pointer");

        showOTPSection();
      }
    } catch (error) {
      console.error(error);
      swal("An error occurred while verifying OTP. Please try again later.");
    }
  }

  function signinUser() {
    const email = document.getElementById("email").value;
    const brandName = document.getElementById("brandName").value;
    const outletName = document.getElementById("outletName").value;
    const mobile = document.getElementById("mobile").value;
    const regNumber = document.getElementById("regNumber").value;
    const gpsCoordinates = document.getElementById("gpsCoordinates").value;
    const pin = document.getElementById("pin").value;
    const password = document.getElementById("password").value;

    fetch("/merchant/signup", {
      method: "POST",
      body: JSON.stringify({
        email: email,
        brandName: brandName,
        outletName: outletName,
        mobile: mobile,
        regNumber: regNumber,
        gpsCoordinates: gpsCoordinates,
        pin: pin,
        password: password,
      }),
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((response) => {
        if (response.ok) {
          window.location.href = "/merchant/login";
        } else {
          swal("An error occurred. Please try again later.");
        }
      })
      .catch((error) => {
        console.error(error);
        swal("An error occurred. Please try again later.");
      });
  }
</script>
